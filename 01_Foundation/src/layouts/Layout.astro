---
import Navbar from "../components/Navbar.astro";
//Server Only

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0 auto;
    width: 100%;
    height: 100%;
    background-color: #21232a;
    color: white;
  }
  .uno {
    max-width: 1200px;
    margin: 0 auto;
    min-width: 300px;
    padding: 20px;
  }
  a {
    color: rgb(81, 255, 0);
  }
</style>
